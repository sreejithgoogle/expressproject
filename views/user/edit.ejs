<% include ../partials/header %>
<span style="margin-left:450px;"><a href="/">Home</a></span>
<span style="margin-left:50px;"><a href="/users">List Customers</a></span>
<h1><%= title %></h1>
<% if(errors){ %>
    <ul>
    <% errors.forEach(function(error){ %>
    <li><%= error.msg %></li>
    <% }) %>
    </ul>
<% } %>
<form method="POST" action="/users/edit/<%= id %>">
    <table width="25%" border="0">
        <tr>
            <td><label>First Name</label></td>
            <td><input type="text" name="first_name" value="<%= first_name %>"/></td>
        </tr>
        <tr>
            <td><label>last Name</label></td>
            <td><input type="text" name="last_name" value="<%= last_name %>"/></td>
        </tr>
        <tr>
            <td><label>Email</label></td>
            <td><input type="text" name="email" value="<%= email %>"/></td>
        </tr>
        <tr>
            <td></td>
            <td><input type="submit" value="Submit"/>
                <a href="/users" style="text-decoration: none;"><input type="button" name="back" value="Back" /></a></td>
        </tr>
    </table>
</form>
<% include ../partials/footer %>
